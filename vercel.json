{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npx vite build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs24.x"
    }
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api" },
    {
      "source": "/((?!assets|site-assets|favicon|robots|sitemap|api).*)",
      "destination": "/index.html"
    }
  ]
}
